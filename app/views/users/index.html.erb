<h1 class="text-center text-muted my-3">ユーザー一覧</h1>

<div class="my-4 py-4 bg-light shadow">
  <div class="row justify-content-md-center">
    <div class="col-md-6">
      <% @users.each do |user| %>
        <div class="shadow p-3 mb-1 bg-body rounded">
          <div class="col-2 float-start">
            <%= image_tag user.image, class:"rounded-circle w-25" if user.image.attached? %>
          </div>
          <div class="fw-bold">
            <%= link_to user.name, user_path(user), class:"text-decoration-none text-black"%>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
