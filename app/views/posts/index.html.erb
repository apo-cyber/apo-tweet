<h1 class="text-center text-muted my-3">投稿一覧</h1>


    <%= search_form_for @q, class: 'mb-5' do |f| %>
      <div class="row justify-content-md-center py-3">
        <div class="col-md-1">
          <%= f.submit class: 'btn btn-outline-primary' %>
          <i class="bi bi-search"></i>
        </div>
        <div class="form-group col-md-6">
        <!-- <%= f.label :title_or_content_cont, '検索：' %> -->
          <%= f.search_field :title_or_content_or_created_at_cont, class: 'form-control '%>
        </div>
      <!-- <div class="form-group row mt-3">
        <%= f.label :created_at_gteq, '登録日時', class: 'col-sm-2 col-form-label fw-bold' %>
        <span class='col-sm-10'><%= f.search_field :created_at_gteq, class: 'form-control' %></span>
      </div> -->
    <% end %>

  <div class="row justify-content-md-center">
    <div class="col-md-8">
      <div class="mt-4 pagination flex-wrap">
        <%= paginate @posts, theme: 'bootstrap-5' %>
        <!-- <%= page_entries_info @posts %> -->
      </div>

      <% @posts.each do |post| %>
        <div class="shadow p-3 mb-1 bg-body rounded">
          <div class="col-1 float-start">
            <%= image_tag post.user.image, class:"rounded-circle w-50" if post.user.image.attached? %>
          </div>
          <h5><%= link_to post.user.name, user_path(post.user),class:"text-decoration-none text-black"%></h5>
          <div class="fw-bold"><%= link_to post.title, post_path(post) %></div>
          <%= post.content%>
        </div>
      <% end %>
    </div>
  </div>
</div>
